---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
const blocCards = await Astro.glob('./blog/**.md');
---

<Layout>
    <h1 class="text-7xl font-bold underline text-white">
        Componente de Bloc!!
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 my-20">
        {blocCards.map((card) => (
            <div class="relative flex w-80 flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md">
                <div class="relative mx-4 -mt-6 h-40 overflow-hidden rounded-xl bg-blue-gray-500 hover:shadow-lg">
                    <img src={card.frontmatter.heroImage} alt={card.frontmatter.title} class="h-full w-full object-cover" />
                </div>
                <div class="p-6">
                    <h5 class="mb-2 block font-sans text-xl font-semibold leading-snug tracking-normal text-blue-gray-900 antialiased">
                    {card.frontmatter.title}
                    </h5>
                    <p class="block font-sans text-base font-light leading-relaxed text-inherit antialiased">
                    {card.frontmatter.description} 
                    </p>
                </div>
                <div class="p-6 pt-0">
                    <button data-ripple-light="true" type="button" class="select-none rounded-lg bg-blue-500 py-3 px-6 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-blue-500/20 transition-all hover:shadow-lg hover:shadow-blue-500/40 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none hover:cursor-copy">
                    Read More
                    </button>
                </div>
            </div>
        ))}
    </div>
</Layout>

