---
import Navbar from '../components/NavBar.astro';
import "../styles/global.css";

const props = Astro.props ?? {};
const hero =
  props.heroImage ||
  props.heroimage ||
  props.image ||
  props.frontmatter?.heroImage ||
  props.frontmatter?.image ||
  null;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-600 to-gray-900">
    <Navbar />
    <main class="max-w-3xl mx-auto p-4">

      {hero ? (
        <img
          src={hero}
          alt={props.title ?? "hero"}
          class="w-full rounded-lg shadow-lg mb-4 object-cover max-h-96"
        />
      ) : (
        <div class="mb-4 text-gray-300">No se encontr√≥ heroImage en frontmatter.</div>
      )}

      <hr class="my-4 border-gray-500" />
      <slot />
    </main>
  </body>
</html>
