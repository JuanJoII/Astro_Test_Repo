---
import Navbar from '../components/NavBar.astro';
import "../styles/global.css";

const fm = Astro.props.frontmatter ?? {};
const heroImage = fm.heroImage ?? null;
const title = fm.title ?? "";
const publishDate = fm.publishDate
  ? new Date(fm.publishDate).toLocaleDateString("es-ES", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : "";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-600 to-gray-900">
    <Navbar />
    <main class="max-w-3xl mx-auto p-4">
      
      {heroImage && (
        <img 
          src={heroImage} 
          alt={title} 
          class="w-full rounded-lg shadow-lg mb-2 object-cover max-h-96"
        />
      )}

      {publishDate && (
        <p class="text-sm text-gray-300 mb-4">{publishDate}</p>
      )}

      <hr class="my-4 border-gray-500" />

      <h1 class="text-2xl font-bold text-white mb-4">{title}</h1>

      <slot />
    </main>
 Â </body>
</html>